<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slf_feedback_page_child_bg"
    android:elevation="0dp">

    <include layout="@layout/slf_all_common_title" />

    <com.sandglass.sandglasslibrary.commonui.SLFScrollView
        android:id="@+id/slf_feed_back_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/slf_title_bar"
        android:layout_marginBottom="20dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/slf_faq_detail_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/slf_faq_to_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:background="@drawable/slf_faq_detail_btn_bg"
                android:drawableLeft="@drawable/slf_faq_detail_btn_left"
                android:drawablePadding="9dp"
                android:gravity="center"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:text="@string/slf_faq_detail_btton_text"
                android:textColor="@color/slf_faq_detail_btn_text_color"
                android:textSize="16sp" />

        </LinearLayout>
    </com.sandglass.sandglasslibrary.commonui.SLFScrollView>

</RelativeLayout>