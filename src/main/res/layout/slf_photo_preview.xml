<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slf_photo_preivew_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slf_photo_bg_gf_crop_texture"
    android:elevation="0dp">

    <include layout="@layout/slf_selector_photo_common_title" />

    <com.wyze.sandglasslibrary.commonui.SLFPhotoViewPager
        android:id="@+id/slf_vp_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/slf_photo_base_iv_crop"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="35dp"
        android:elevation="5dp"
        android:gravity="center"
        android:drawableLeft="@drawable/slf_photo_crop_gf_crop_tile" />

    <Button
        android:id="@+id/slf_photo_selector_iv_confirm"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="35dp"
        android:elevation="5dp"
        android:gravity="center"
        android:drawableLeft="@drawable/slf_photo_done_gf_done" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>