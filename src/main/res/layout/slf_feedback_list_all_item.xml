<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:background="@drawable/slf_feedback_list_item_bg">

    <TextView
        android:id="@+id/slf_feedback_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="@string/slf_feedback_list_item_title_in_progress"
        android:textColor="@color/slf_theme_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/slf_feedback_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/slf_feedback_list_item_title"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:text="12/11/2022 7:23 AM"
        android:textColor="@color/slf_list_time_text_color"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/slf_feedback_list_item_content_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slf_feedback_list_item_title"
        android:layout_alignLeft="@+id/slf_feedback_list_item_title"
        android:layout_marginTop="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <TextView
            android:id="@+id/slf_feedback_list_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:layout_toLeftOf="@+id/slf_feedback_list_item_content_point"
            android:layout_alignParentLeft="true"
            android:lineSpacingExtra="8dp"
            android:maxLines="2"
            android:text="DescriptiondescriptionDescriptionDescriptionDescriptionDescriptionDescriptio"
            android:textColor="@color/slf_list_problem_text_color"
            android:textSize="14sp"
            android:layout_marginRight="12dp"/>

        <ImageView
            android:id="@+id/slf_feedback_list_item_right_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/slf_feedback_list_item_back"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/slf_feedback_list_item_content_point"
            android:src="@drawable/slf_feedback_list_item_point"
            android:layout_toLeftOf="@+id/slf_feedback_list_item_right_back"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:visibility="invisible"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slf_feedback_list_item_bottom_title"
        android:layout_below="@+id/slf_feedback_list_item_content_relative"
        android:textSize="12sp"
        android:textColor="@color/slf_chat_input_ph_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:text="Service type/Problem type/Problem overviewProblem overviewProblem overviewProblem overview"/>
</RelativeLayout>