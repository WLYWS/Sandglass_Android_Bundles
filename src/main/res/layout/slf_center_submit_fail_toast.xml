<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/slf_submit_fail_toast_parent"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:background="@drawable/slf_common_toast_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/slf_center_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/slf_submit_fail_img"
                android:src="@drawable/slf_submit_fail_img"
                android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/slf_center_submit_fail_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/slf_common_toast_bg"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingTop="13dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="20dp"
                    android:textSize="13sp"
                    android:text="@string/slf_submit_fail_text"
                    android:textColor="@color/slf_submit_fail_text_color" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>