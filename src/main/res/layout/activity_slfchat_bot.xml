<?xml version="1.0" encoding="utf-8"?>
<com.wyze.sandglasslibrary.commonui.SLFFITRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_bot_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".functionmoudle.activity.chatbot.SLFChatBotActivity">

    <include layout="@layout/slf_all_common_title" />

    <LinearLayout
        android:layout_below="@id/slf_title_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/sw_faq_recycle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_faq_chat_bot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <LinearLayout
            android:id="@+id/ll_et_input"
            android:orientation="vertical"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.wyze.sandglasslibrary.commonui.SLFClickEditText
                android:layout_marginTop="8dp"
                android:id="@+id/et_faq_input"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:hint="@string/slf_faq_input_hint"
                android:textColorHint="@color/slf_chat_input_ph_color"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:imeOptions="actionSend"
                android:textColor="@color/white"
                android:maxLength="500"
                android:background="@drawable/slf_chat_bot_bg"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
