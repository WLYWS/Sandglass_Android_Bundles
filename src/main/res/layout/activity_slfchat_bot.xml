<?xml version="1.0" encoding="utf-8"?>
<com.sandglass.sandglasslibrary.commonui.SLFFITRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_bot_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".functionmoudle.activity.chatbot.SLFChatBotActivity">

    <include layout="@layout/slf_all_common_title" />

    <LinearLayout
        android:layout_below="@id/slf_title_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        android:id="@+id/slf_chat_bot_all_linear">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/sw_faq_recycle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_faq_chat_bot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <LinearLayout
                android:id="@+id/ll_et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/slf_first_page_bottom_bg"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/slf_bottom_btn_linear"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/slf_goto_feedback"
                    android:background="@drawable/slf_first_page_btn_bg"
                    android:drawableLeft="@drawable/slf_first_page_feedback_left_icon"
                    android:padding="12dp"
                    android:text="@string/slf_help_and_feedback_feed_back"
                    android:textColor="@color/slf_first_page_btn_text"
                    android:textAllCaps="false"
                    android:drawablePadding="10dp"
                    android:textSize="12sp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/slf_goto_faq"
                    android:background="@drawable/slf_first_page_btn_bg"
                    android:drawableLeft="@drawable/slf_first_page_faq_left_icon"
                    android:padding="12dp"
                    android:text="@string/slf_help_and_feedback_faq_list"
                    android:textColor="@color/slf_first_page_btn_text"
                    android:textAllCaps="false"
                    android:drawablePadding="10dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>
            <com.sandglass.sandglasslibrary.commonui.SLFClickEditText
                android:layout_marginTop="8dp"
                android:id="@+id/et_faq_input"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:hint="@string/slf_faq_input_hint"
                android:textColorHint="@color/slf_chat_input_ph_color"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:imeOptions="actionSend"
                android:textColor="@color/white"
                android:maxLength="500"
                android:background="@drawable/slf_chat_bot_bg"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:singleLine="false"
                android:maxHeight="90dp"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@color/slf_complete_text_color"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
    </LinearLayout>

</com.sandglass.sandglasslibrary.commonui.SLFFITRelativeLayout>