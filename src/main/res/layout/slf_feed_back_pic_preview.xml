<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slf_pic_preview_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slf_feedback_page_child_bg">

    <com.wyze.sandglasslibrary.commonui.SLFPhotoViewPager
        android:id="@+id/slf_vp_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/slf_title_bar"
        android:layout_above="@+id/slf_bottom_use_relative"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/slf_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_titlebar_height"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/slf_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginStart="8dp"
            android:padding="16dp"
            android:src="@drawable/slf_title_icon_white_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/slf_tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginStart="17dp"
            android:padding="5dp"
            android:text="@string/slf_title_cancel"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/slf_tv_title_name"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/slf_tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="17dp"
            android:padding="8dp"
            android:text="@string/slf_title_save"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/slf_bottom_use_relative"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_above="@+id/slf_bottom_view"
        android:background="@color/slf_detail_header_bg_color"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/slf_retake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="@string/slf_photo_preview_retake_photo"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/slf_use_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="16dp"
            android:text="@string/slf_photo_preview_use_photo"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:id="@+id/slf_bottom_view"
        android:background="@color/slf_detail_header_bg_color"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>