<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slf_photo_title_titleBar"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingTop="25dp"
    android:elevation="6dp"
    android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/slf_photo_title_back"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/slf_btn_common_back_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/slf_photo_title_center_linear"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

        <TextView
            android:id="@+id/slf_photo_title_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:text="all pictures"
            android:textColor="@color/white"
            android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/slf_photo_title_cancel"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photo_id_cancel"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/slf_title_cancel"
            android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
