<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slf_photo_title_titleBar"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingTop="25dp"
    android:elevation="6dp"
    android:background="@color/transparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/slf_photo_title_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="16dp"
            android:src="@drawable/slf_photo_selector_close" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/slf_photo_title_center_linear"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/slf_photo_selector_title_bg"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

        <TextView
            android:id="@+id/slf_photo_title_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:text="all pictures"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/slf_iv_arrow_down"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/slf_photo_title_filename"
            android:src="@drawable/slf_photo_selector_title_down"
            android:visibility="visible" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
