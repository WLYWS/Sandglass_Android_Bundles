<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slf_photo_title_titleBar"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:paddingTop="15dp"
    android:elevation="6dp"
    android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/slf_photo_title_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/slf_photo_circle_bg"
            android:padding="10dp"
            android:src="@drawable/slf_photo_back_gf_back" />

        <TextView
            android:id="@+id/slf_photo_title_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/slf_photo_title_back"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="all pictures"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/slf_iv_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/slf_photo_title_filename"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:src="@drawable/slf_photo_arrow_gf_triangle_arrow"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/slf_photo_title_rotate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/slf_photo_title_photograph"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/slf_photo_rotate_gf_rotate"
            android:background="@drawable/slf_photoselector_circle_bg"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/slf_photo_title_photograph"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="12dp"
            android:src="@drawable/slf_photo_camera_gf_camera"
            android:background="@drawable/slf_photoselector_circle_bg"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/slf_photo_title_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="12dp"
            android:src="@drawable/slf_photo_setting"
            android:background="@drawable/slf_photoselector_circle_bg"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/slf_tv_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/slf_photo_title_photograph"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text=""
            android:textColor="#FFFFFF"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>
