<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_chat_bot_robot_answer_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/slf_chat_bot_robot_icon"
        />
    <LinearLayout
        android:id="@+id/ll_faq_answer"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/slf_chat_bot_bg"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_faq_feedback_title"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/slf_chat_line_color"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_faq_feedback_answer"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/slf_chat_line_color"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.wyze.sandglasslibrary.commonui.chatbot.SLFChatBotFaqListView
        android:id="@+id/sf_faq_feedback_question"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/view_question_line"
        android:background="@color/slf_chat_line_color"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_faq_question_up"
            android:src="@mipmap/slf_faq_question_up"
            android:layout_marginLeft="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="20dp"
            android:layout_height="19dp"/>
        <ImageView
            android:id="@+id/iv_faq_question_center"
            android:src="@mipmap/slf_faq_question_up"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="20dp"
            android:layout_height="19dp"/>
        <ImageView
            android:id="@+id/iv_faq_question_down"
            android:src="@mipmap/slf_faq_question_down"
            android:layout_marginRight="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="20dp"
            android:layout_height="19dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>