<?xml version="1.0" encoding="utf-8"?>
<com.sandglass.sandglasslibrary.commonui.SLFFITRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slf_bg_color"
    android:fitsSystemWindows="true">

    <include layout="@layout/slf_all_common_title" />

    <com.sandglass.sandglasslibrary.commonui.SLFScrollView
        android:id="@+id/slf_feed_back_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/slf_submit_feedback"
        android:layout_below="@id/slf_title_bar"
        android:layout_marginBottom="20dp"
        android:background="@color/slf_bg_color"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:background="@color/slf_bg_color"
            android:paddingBottom="86dp">

            <LinearLayout
                android:id="@+id/service_type_seletor_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/selector_service_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:gravity="center"
                    android:text="@string/slf_feedback_selector_service_title"
                    android:textColor="@color/slf_feedback_question_type_title"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/spinner_service"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/slf_feedback_page_child_bg"
                    android:drawableRight="@drawable/slf_btn_icon_down"
                    android:hint="@string/slf_feedback_selector_service"
                    android:paddingLeft="16dp"
                    android:paddingTop="14dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textColorHint="@color/slf_feedback_page_child_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/problem_type_seletor_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/service_type_seletor_linear"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selector_problem_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:gravity="center"
                    android:text="@string/slf_feedback_selector_problem_title"
                    android:textColor="@color/slf_feedback_question_type_title"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/spinner_problem"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/slf_feedback_page_child_bg"
                    android:drawableRight="@drawable/slf_btn_icon_down"
                    android:hint="@string/slf_feedback_selector_problem"
                    android:paddingLeft="16dp"
                    android:paddingTop="14dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textColorHint="@color/slf_feedback_page_child_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/problem_overview_seletor_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/problem_type_seletor_linear"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selector_problem_overview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:gravity="center"
                    android:text="@string/slf_feedback_selector_problem_overview_title"
                    android:textColor="@color/slf_feedback_question_type_title"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/spinner_problem_overview"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/slf_feedback_page_child_bg"
                    android:drawableRight="@drawable/slf_btn_icon_down"
                    android:hint="@string/slf_feedback_selector_problem_overview"
                    android:paddingLeft="16dp"
                    android:paddingTop="14dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textColorHint="@color/slf_feedback_page_child_text" />
            </LinearLayout>

            <TextView
                android:id="@+id/problem_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/problem_overview_seletor_linear"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/slf_feedback_problem_description_title"
                android:textColor="@color/slf_feedback_question_type_title"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/slf_tv_opinion_textnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/problem_overview_seletor_linear"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="36dp"
                android:gravity="center"
                android:text="@string/slf_feedback_font_count"
                android:textColor="@color/slf_feedback_question_type_title"
                android:textSize="13sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/problem_content_releate"
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:layout_below="@id/problem_description_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/slf_feedback_page_child_bg">

                <EditText
                    android:id="@+id/question_content"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:background="@android:color/transparent"
                    android:gravity="left|top"
                    android:hint="@string/slf_feedback_problem_description"
                    android:inputType="textMultiLine"
                    android:maxLength="1000"
                    android:padding="16dp"
                    android:scrollbarSize="2dp"
                    android:scrollbarThumbVertical="@color/slf_complete_text_color"
                    android:scrollbars="vertical"
                    android:textColor="@color/white"
                    android:textColorHint="@color/slf_feedback_page_child_text"
                    android:textSize="14sp"
                    android:textCursorDrawable="@drawable/slf_edit_cursor"/>

                <View
                    android:id="@+id/edit_line_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/question_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/slf_feedback_page_edit_line" />

                <LinearLayout
                    android:id="@+id/photo_grid_img_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_line_view"
                    android:layout_margin="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <GridView
                        android:id="@+id/slf_gv_add_attach"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:numColumns="5"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth" />

                    <include
                        layout="@layout/slf_add_img_layout"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/email_seletor_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/problem_content_releate"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/selector_email_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:gravity="center"
                    android:text="@string/slf_feedback_email_title"
                    android:textColor="@color/slf_feedback_question_type_title"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/slf_email_eidt"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/slf_feedback_page_child_bg"
                    android:drawableRight="@drawable/slf_feed_back_email_close_all"
                    android:drawablePadding="8dp"
                    android:hint="@string/slf_feedback_email_hint"
                    android:inputType="textVisiblePassword"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textColorHint="@color/slf_feedback_question_type_title" />

            </LinearLayout>

            <TextView
                android:id="@+id/slf_email_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_seletor_linear"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:text="@string/slf_feedback_email_error"
                android:textColor="@color/slf_feedback_page_email_error"
                android:textSize="12sp"
                android:visibility="invisible" />

            <CheckBox
                android:id="@+id/slf_upload_log"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/email_seletor_linear"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/slf_feed_back_log_checkbox_layout"
                android:button="@null"
                android:checked="true"
                android:paddingLeft="8dp" />

            <TextView
                android:id="@+id/slf_checkbox_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_seletor_linear"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/slf_upload_log"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="@string/slf_feedback_send_log"
                android:textColor="@color/slf_feedback_page_child_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </com.sandglass.sandglasslibrary.commonui.SLFScrollView>

    <Button
        android:id="@+id/slf_submit_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/slf_feedback_page_child_bg"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/slf_feedback_submit_feedback"
        android:textAllCaps="false"
        android:textColor="@color/slf_feedback_question_type_title" />

    <LinearLayout
        android:id="@+id/slf_submit_page_no_network_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/slf_submit_page_no_item_img"
            android:layout_width="227dp"
            android:layout_height="161dp"
            android:src="@drawable/slf_feedback_list_no_item" />

        <TextView
            android:id="@+id/slf_submit_page_no_network_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/slf_first_page_no_network"
            android:textColor="@color/slf_first_page_no_network_warning"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/slf_submit_page_no_network_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/slf_first_page_no_network_sub"
            android:textColor="@color/slf_sub_title_color"
            android:textSize="20sp" />

        <Button
            android:id="@+id/slf_submit_page_try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/slf_first_page_no_network_btn_bg"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/slf_first_page_no_network_try_again"
            android:textAllCaps="false"
            android:textColor="@color/slf_first_page_try_again_text"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slf_common_loading_linear_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/slf_common_loading_parent_submit"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_margin="6dp"
            android:background="@drawable/slf_common_toast_bg"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <!--<ProgressBar-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp" />-->


            <!--        <ImageView-->
            <!--            android:id="@+id/slf_common_laoding_iv_loading"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:layout_marginBottom="16dp"-->
            <!--            android:layout_marginTop="30dp"-->
            <!--            android:layout_above="@+id/slf_common_loading_tv_content"-->
            <!--            android:padding="6dp"-->
            <!--            android:src="@drawable/slf_common_loading_img"/>-->
            <ProgressBar
                android:id="@+id/slf_progressbar_common"
                style="@style/slf_ProgressBar_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/slf_common_loading_tv_content_submit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/slf_common_loading_tv_content_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:letterSpacing="0.04"
                android:text="Loading"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
</com.sandglass.sandglasslibrary.commonui.SLFFITRelativeLayout>