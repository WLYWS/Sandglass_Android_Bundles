<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slf_title_bar"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/slf_iv_back"
        android:layout_width="46dp"
        android:layout_height="16dp"
        android:layout_gravity="center|left"
        android:paddingRight="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/slf_btn_common_back_white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/slf_tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:layout_marginStart="17dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/slf_title_cancel"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/slf_tv_title_name"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/slf_tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginEnd="9dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/slf_title_save"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical">

        <ImageView
            android:id="@+id/slf_iv_second_right"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/slf_iv_right"
            android:layout_width="64dp"
            android:paddingLeft="20dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />
    </LinearLayout>

</FrameLayout>