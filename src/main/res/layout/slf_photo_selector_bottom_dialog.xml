<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slf_bottom_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slf_bottom_hint_dialog_bg"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/slf_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slf_bottom_dialog_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/slf_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/slf_tv_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingBottom="18dp"
                android:text="content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>


        <View
            android:id="@+id/slf_view_top_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/teal_700" />


        <ListView
            android:id="@+id/slf_lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/white"
            android:dividerHeight="2px"
            android:gravity="center"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:visibility="visible" />


        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@color/wpk_gray_press" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/slf_tv_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/slf_tv_cancel"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="16dp"
        android:text="Done"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/slf_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/slf_title_cancel"
        android:textColor="@color/black" />

</LinearLayout>