<?xml version="1.0" encoding="utf-8"?><!--
  ~ COMMON TITLE BAR.
  -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slf_title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/std_titlebar_height">

    <ImageView
        android:id="@+id/slf_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginStart="20dp"
        android:src="@drawable/slf_btn_common_back_white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/slf_tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:text="@string/slf_title_cancel"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/slf_tv_title_name"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/slf_tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="12dp"
        android:padding="8dp"
        android:text="@string/slf_title_save"
        android:textColor="@color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:layout_gravity="right|center_vertical">
        <ImageView
            android:id="@+id/slf_iv_second_right"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/slf_iv_right"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

</FrameLayout>