<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="slf_dialog_style" parent="android:style/Theme.Dialog">
        <!-- 背景颜色 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置是否显示标题-->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上,会造成macth_parent失效-->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>
    
    <!-- dialog进出动画 -->
    <style name="slf_dialogBottomAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slf_clean_history_detail_dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slf_clean_history_detail_dialog_bottom_out</item>
    </style>
    <style name="slf_dialogTopAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slf_clean_history_detail_dialog_top_in</item>
        <item name="android:windowExitAnimation">@anim/slf_clean_history_detail_dialog_top_out</item>
    </style>

    <style name="FullScreenDialogStyle" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="slf_ProgressBar" parent="android:style/Widget.Holo.ProgressBar">
        <item name="android:indeterminateDrawable">@anim/slf_anim_photo_grid_item_progress</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="slf_feedback_list_more_ProgressBar" parent="android:style/Widget.Holo.ProgressBar">
        <item name="android:indeterminateDrawable">@anim/slf_anim_feed_back_list_more_progress</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>
</resources>